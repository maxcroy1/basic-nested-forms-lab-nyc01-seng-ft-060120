<h1>New Recipe Form</h1>
<%= form_for @recipe do |f| %>
    <%= f.label :title, value="Recipe Title:" %>
    <%= f.text_field :title %>
    <br /><br />

    <%= f.fields_for :ingredients do |ingr| %>
        <%= ingr.label :name, value="Ingredient Name:" %>
        <%= ingr.text_field :name %><br>

        <%= ingr.label :quantity, value="Ingredient Quantity:" %>
        <%= ingr.text_field :quantity %><br><br>

    <% end %>

    <%= f.submit %>
<% end %>